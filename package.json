{
    "name": "existdb-vscode",
    "version": "1.0.0",
    "description": "Language server and client for eXist and XQuery",
    "scripts": {
        "vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "test": "npm run compile && mocha",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
    },
    "keywords": [
        "languageserver"
    ],
    "author": "Wolfgang Meier",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/wolfgangmm/existdb-langserver.git"
    },
    "publisher": "existdb",
    "license": "GPL-3.0-or-later",
    "engines": {
        "vscode": "^1.33.0"
    },
    "activationEvents": [
        "onLanguage:xquery"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "grammars": [
            {
                "language": "xquery",
                "path": "./client/languages/xquery/xquery.tmLanguage",
                "scopeName": "source.xquery"
            }
        ],
        "languages": [
            {
                "id": "xquery",
                "aliases": [
                    "XQuery",
                    "xquery"
                ],
                "extensions": [
                    ".xq",
                    ".xql",
                    ".xqm",
                    ".xqy",
                    ".xquery"
                ],
                "configuration": "./client/languages/xquery/xquery.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "eXistdb Server configuration",
            "properties": {
                "existdb.uri": {
                    "scope": "resource",
                    "type": "string",
                    "default": "http://localhost:8080/exist",
                    "description": "The base URL eXist is running on"
                },
                "existdb.user": {
                    "scope": "resource",
                    "type": "string",
                    "default": "admin",
                    "description": "Name of the user to connect with"
                },
                "existdb.password": {
                    "scope": "resource",
                    "type": "string",
                    "default": "",
                    "description": "Password for the user to connect with"
                },
                "existdb.path": {
                    "scope": "resource",
                    "type": "string",
                    "default": null,
                    "description": "Path to the app collection within eXist"
                }
            }
        }
    },
    "devDependencies": {
        "@types/mocha": "^5.2.7",
        "@types/node": "^8.0.0",
        "assert": "^2.0.0",
        "mocha": "^6.2.1",
        "ts-node": "^8.4.1",
        "tslint": "^5.16.0",
        "typescript": "^3.5.1"
    }
}
